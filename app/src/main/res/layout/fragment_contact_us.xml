<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar">

        <com.google.android.material.appbar.MaterialToolbar
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/contact_us"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="@color/purple_200">


        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="@dimen/_16dp"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_contact_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contactt_personn"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="@dimen/_16dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_contact_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nupay_admin"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toBottomOf="@+id/tv_contact_person"
                android:layout_marginTop="@dimen/_4dp"
                android:layout_marginHorizontal="@dimen/_16dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_contact_person_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_person_mail"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintTop_toBottomOf="@+id/tv_contact_person_name"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_16dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_contact_person_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_person_email"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toBottomOf="@+id/tv_contact_person_mail"
                android:layout_marginTop="@dimen/_4dp"
                android:layout_marginHorizontal="@dimen/_16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>